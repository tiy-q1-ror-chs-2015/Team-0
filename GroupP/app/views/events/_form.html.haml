- if @event.errors.any?
  - @event.errors.full_messages.each do |message|
    %p= message
    %br/
= form_for [current_user, @event] do |f|
  = f.label :name
  = f.text_field :name
  %br
  = f.label :description
  = f.text_area :description
  %br
  = f.label :date
  = f.date_field :date
  %br
  %p
    Who will be attending this event?
  - @users.each do |c|
    = check_box_tag 'event[user_ids][]', c.id, @event.users.include?(c)
    = c.email
  %br
  = f.submit